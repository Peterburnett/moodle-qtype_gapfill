<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="question/type/gapfill/db" VERSION="20200224" COMMENT="XMLDB file for Moodle question/type/gapfill"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="question_gapfill" COMMENT="Options for gapfill questions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="question" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Foreign key references question.id"/>
        <FIELD NAME="answerdisplay" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Display a shuffled list of answers true/false 1 or 0"/>
        <FIELD NAME="delimitchars" TYPE="char" LENGTH="2" NOTNULL="false" DEFAULT="[]" SEQUENCE="false" COMMENT="The characters that define fields, generally defaults to [] i.e. The [cat] sat on the [mat] where the fields are [cat] and [mat]"/>
        <FIELD NAME="casesensitive" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="make marking case sensitive, e.g. if the answer is cat Cat will also be accepted as correct"/>
        <FIELD NAME="noduplicates" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Discard any duplicate answers given. Useful where multiple fields can take the same value through the use of the or (|) operator."/>
        <FIELD NAME="disableregex" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="disable use of regular expressions for answer comparisons use plain strcmp"/>
        <FIELD NAME="fixedgapsize" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="1" SEQUENCE="false" COMMENT="all gaps set to the same size in the renderer"/>
        <FIELD NAME="optionsaftertext" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Show options after text"/>
        <FIELD NAME="letterhints" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Add letters from correct response incrementally in interactive mode"/>
        <FIELD NAME="noshuffle" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="don't shuffle the answer options"/>
        <FIELD NAME="correctfeedback" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="correctfeedbackformat" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="partiallycorrectfeedback" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="partiallycorrectfeedbackformat" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="incorrectfeedback" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="incorrectfeedbackformat" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="question" TYPE="foreign" FIELDS="question" REFTABLE="question" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="question_gapfill_settings" COMMENT="per gap settings for the gapfill question type">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="question" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="itemid" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The id (including instance) of each gap"/>
        <FIELD NAME="gaptext" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="text of the gap including delimiter"/>
        <FIELD NAME="correctfeedback" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Feedback displayed for correct response"/>
        <FIELD NAME="incorrectfeedback" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Feedback displayed for incorrect response"/>
        <FIELD NAME="isdistractor" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Is a distractor field, a wrong answer to distract the user."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="gapfill_gapsettings" TYPE="foreign" FIELDS="question" REFTABLE="question" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>